# Configuración de PRODUCCIÓN para Railway
# Este archivo se usa cuando se despliega en Railway

# Configuración del servidor
PORT=3000

# MongoDB - USA ATLAS (base de datos en la nube)
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/dejoaromas?retryWrites=true&w=majority

# JWT
JWT_SECRET=tu_clave_secreta_jwt_muy_segura_y_larga_aqui_mismo_123456789
JWT_EXPIRE=30d

# Configuración de correo - Usar SendGrid o similar en producción
EMAIL_ENABLED=true
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_app_password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
FROM_EMAIL=tu_tienda@example.com
