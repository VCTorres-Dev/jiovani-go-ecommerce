# URL real del frontend
FRONTEND_URL_REAL=https://tu-app.railway.app

# Configuración de Transbank - PRODUCCIÓN
TRANSBANK_ENV=PRODUCTION
TRANSBANK_COMMERCE_CODE=tu_codigo_real
TRANSBANK_API_KEY=tu_api_key_real

# Ambiente
NODE_ENV=production

